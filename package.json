{
  "name": "compile-to-js",
  "version": "1.0.0",
  "main": "server/index.js",
  "repository": "git@github.com:jderochervlk/compile-to-js.git",
  "author": "Josh Derocher <josh@vlkpack.com>",
  "license": "MIT",
  "scripts": {
    "build": "npm run build:fp-ts && npm run build:purescript",
    "build:fp-ts": "npm run build --workspace=react-fp-ts",
    "build:purescript": "npm i -g purescript && npm run build --workspace=purescript",
    "format": "npx prettier --write .",
    "postinstall": "husky install",
    "res:build": "rescript",
    "res:dev": "rescript build -w"
  },
  "dependencies": {
    "@rescript/core": "^0.5.0",
    "@rescript/react": "^0.11.0",
    "@types/jest": "^28.1.6",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "husky": "^8.0.1",
    "postcss": "^8.4.14",
    "prettier": "^2.7.1",
    "purescript": "*",
    "rescript": "^10.1.4",
    "tailwindcss": "^3.3.3",
    "typescript": "^4.7.4"
  },
  "workspaces": [
    "./apps/**",
    "./site"
  ]
}
